<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE90FF"
    android:backgroundTint="#F3DFC9E6"
    android:backgroundTintMode="src_over"
    android:scrollbarStyle="outsideInset"
    tools:context=".Mainactivity2Activity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="698dp"
        android:layout_height="1164dp"
        android:backgroundTint="#9E9595"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ligtblue" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="347dp"
        android:layout_height="333dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"

        android:backgroundTintMode="add"

        android:foregroundTintMode="add"
        android:src="@drawable/medtime"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.732" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:fontFamily="@font/graduate"
        android:text="DONT FORGET TO TAKE YOUR MEDS!"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652" />

    <TextView
        android:id="@+id/textView"
        style="@android:style/Widget.Material.TextView.SpinnerItem"
        android:layout_width="346dp"
        android:layout_height="90dp"
        android:fontFamily="@font/nosifer"
        android:scrollbarStyle="insideOverlay"
        android:text="𝐏𝐈𝐋𝐋 𝐑𝐄𝐌𝐈𝐍𝐃𝐄𝐑"
        android:textColor="#22749C"
        android:textColorHighlight="#430B0B"
        android:textColorHint="#9C1D1D"
        android:textColorLink="#AA2727"
        android:textSize="28sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

</androidx.constraintlayout.widget.ConstraintLayout>

